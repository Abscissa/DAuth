{
	"name": "instauser-store",
	"description": "User account library",
	"authors": ["Nick Sabalausky"],
	"homepage": "https://github.com/abscissa/InstaUser",
	"license": "zlib/libpng",
	"targetType": "staticLibrary",
	"targetName": "instauser-store",
	"sourcePaths": ["dummy"],
	"importPaths": ["src"],
	"dependencies": {
		"instauser:instauser-basic": "*",
		"mysql-native": { "version": "==0.1.3", "optional": false },
		"vibe-d": { "version": "==0.7.23", "optional": false }
	},
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"targetPath": "lib",

			"dependencies": {
				"safearg": "~>0.9.7"
			},

			"versions": ["InstaUserStore_PrebuiltLib"],
			"postBuildCommands-posix":   ["cd $PACKAGE_DIR && ../helper/build_lib store $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"],
			"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build_lib store $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"]
		},
		{
			"name": "tests",
			"targetType": "executable",
			"targetPath": "bin",
			"sourcePaths": ["dummy"],

			"dependencies": {
				"safearg": "~>0.9.7"
			},

			"versions": ["InstaUser_AllowWeakSecurity", "InstaUserStore_Unittest", "VibeCustomMain", "VibeLibeventDriver"],
			"postBuildCommands-posix":   ["cd $PACKAGE_DIR && ../helper/build_tests store $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"],
			"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build_tests store $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"]
		},
		{
			"name": "docs",
			"targetType": "library",
			"targetPath": "deleteme",

			"dependencies": {
				"ddox": "~>0.10.8"
			},

			"versions": ["InstaUser_Docs"],
			"postBuildCommands-posix":   ["cd $PACKAGE_DIR && ../helper/build_docs store $PACKAGE_DIR $DDOX_PACKAGE_DIR"],
			"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build_docs store $PACKAGE_DIR $DDOX_PACKAGE_DIR"]
		}
	]
}
