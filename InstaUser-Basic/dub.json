{
	"name": "instauser-basic",
	"description": "Authentication utility for systems based on salted password hashes.",
	"authors": ["Nick Sabalausky"],
	"homepage": "https://github.com/abscissa/InstaUser",
	"license": "zlib/libpng",
	"targetType": "staticLibrary",
	"targetName": "instauser-basic",
	"sourcePaths": ["dummy"],
	"importPaths": ["src"],

	"dependencies": {
		"safearg": "~>0.9.7",
		"ddox": "~>0.10.9"
	},

	"postBuildCommands-posix":   ["cd $PACKAGE_DIR    && ../helper/build   basic $PACKAGE_DIR $SAFEARG_PACKAGE_DIR $DDOX_PACKAGE_DIR"],
	"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build basic $PACKAGE_DIR $SAFEARG_PACKAGE_DIR $DDOX_PACKAGE_DIR"],
	
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"targetPath": "lib",

			"versions": ["InstaUserBasic_PrebuiltLib"],
		},
		{
			"name": "tests",
			"targetType": "executable",
			"targetPath": "bin",
			"sourcePaths": ["dummy"],

			"versions": ["InstaUser_AllowWeakSecurity", "InstaUserBasic_Unittest", "VibeCustomMain"],
		},
		{
			"name": "docs",
			"targetType": "library",
			"targetPath": "deleteme",

			"versions": ["InstaUser_Docs"],
		}
	]
}
