{
	"name": "instauser-basic",
	"description": "Authentication utility for systems based on salted password hashes.",
	"authors": ["Nick Sabalausky"],
	"homepage": "https://github.com/abscissa/InstaUser",
	"license": "zlib/libpng",
	"targetType": "staticLibrary",
	"targetName": "instauser-basic",
	"sourcePaths": ["dummy"],
	"importPaths": ["src"],
	"configurations": [
		{
			"name": "library",
			"targetType": "library",
			"targetPath": "lib",

			"dependencies": {
				"safearg": "~>0.9.7"
			},

			"versions": ["InstaUserBasic_PrebuiltLib"],
			"postBuildCommands-posix":   ["cd $PACKAGE_DIR && ../helper/build_lib basic $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"],
			"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build_lib basic $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"]
		},
		{
			"name": "tests",
			"targetType": "executable",
			"targetPath": "bin",

			"dependencies": {
				"safearg": "~>0.9.7"
			},

			"versions": ["InstaUser_AllowWeakSecurity", "InstaUserBasic_Unittest"],
			"postBuildCommands-posix":   ["cd $PACKAGE_DIR && ../helper/build_tests basic $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"],
			"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build_tests basic $PACKAGE_DIR $SAFEARG_PACKAGE_DIR"]
		},
		{
			"name": "docs",
			"targetType": "library",
			"targetPath": "deleteme",

			"dependencies": {
				"ddox": "~>0.10.8"
			},

			"versions": ["InstaUser_Docs"],
			"postBuildCommands-posix":   ["cd $PACKAGE_DIR && ../helper/build_docs basic $PACKAGE_DIR $DDOX_PACKAGE_DIR"],
			"postBuildCommands-windows": ["cd /D $PACKAGE_DIR && ..\\helper\\build_docs basic $PACKAGE_DIR $DDOX_PACKAGE_DIR"]
		}
	]
}
